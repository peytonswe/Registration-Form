<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.registration.ksusha.registration">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EnterNameActivity"
            android:label="@string/name_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BirthdayActivity"
            android:label="@string/birthday_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutMeActivity"
            android:label="@string/about_me_activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CompleteActivity"
            android:label="@string/complete_activity"
            android:screenOrientation="portrait" />
    </application>

</manifest>